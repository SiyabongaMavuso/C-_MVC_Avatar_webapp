@model AvatarAssignment_2MVC.Models.Fighter

<form method="post" asp-action="DeletePost">
    <input asp-for="ID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Fighter</h2>
        </div>
        <div class="row">
            <div class="col-16">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="BenderName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Weapon"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="FightingStyles"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="BenderName" disabled class="form-control" />
                        

                    </div>
                    <div class="col-3">
                        <input asp-for="City" disabled class="form-control" />
                        
                    </div>
                    <div class="col-3">
                        <input asp-for="Weapon" disabled class="form-control" />
                       

                    </div>
                    <div class="col-3">
                        <input asp-for="FightingStyles" disabled class="form-control" />
                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>


